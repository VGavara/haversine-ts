{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es6",
    "lib": ["es5", "es6", "es7"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"],
      "@typings": ["src/typings"],
      "@typings/*": ["src/typings/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src", "tests"],
  "ts-node": {
    "files": true
  }
}
